# Application Settings
APP_NAME=Lenticularis
APP_VERSION=0.1.0
DEBUG=True
HOST=0.0.0.0
PORT=8000

# SQLite Database
SQLITE_DB_PATH=./data/lenticularis.db

# InfluxDB Configuration
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-influxdb-token-here
INFLUXDB_ORG=lenticularis
INFLUXDB_BUCKET=weather_data

# Data Collection
COLLECTOR_INTERVAL_SECONDS=600
COLLECTOR_ENABLED=True

# Weather Source API Keys
HOLFUY_API_KEY=

# Alert Integrations
SIGNAL_ENABLED=False
SIGNAL_PHONE_NUMBER=

DISCORD_ENABLED=False
DISCORD_WEBHOOK_URL=

TELEGRAM_ENABLED=False
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/lenticularis.log
